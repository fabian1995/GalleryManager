<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1000.0" fx:controller="gallerydemo.GalleryDemoViewController">
    
    <stylesheets>
        <URL value="@gallerydemoview.css"/>
    </stylesheets>
    
    <BorderPane styleClass="root">
        <top>
            <HBox spacing="10" alignment="BOTTOM_LEFT" 
                  BorderPane.alignment="CENTER"
                  fx:id="menuBar">
            </HBox>
        </top>

        <left>
            <TreeView fx:id="locationTreeView" layoutX="0" layoutY="0" prefHeight="193.0" prefWidth="250" />
        </left>

        <center>
            <StackPane>
                <children>
                    <ScrollPane fx:id="scrollImageContainer">
                        <content>
                            <FlowPane fx:id="imagePane" rowValignment="CENTER" ></FlowPane>
                        </content>
                    </ScrollPane>
                    <BorderPane fx:id="fullScreenImageContainer">
                        <center>
                            <VBox alignment="CENTER" fx:id="fullScreenPane" id="fullScreenPane" minHeight="100" minWidth="100"  >
                                <ImageView fx:id="fullScreenImage"></ImageView>
                            </VBox>
                        </center>
                        <bottom>
                            <HBox id="fullScreenMenuBar" alignment="CENTER_LEFT"> 
                                <Button text="Schließen" fx:id="fullScreenCloseButton" id="button-fs-back" styleClass="fullScreenButton"/>
                                <Button text="Zurück" fx:id="fullScreenPrevButton" id="button-fs-prev" styleClass="fullScreenButton"/>
                                <Button text="Weiter" fx:id="fullScreenNextButton" id="button-fs-next" styleClass="fullScreenButton"/>
                            </HBox>
                        </bottom>
                    </BorderPane>
                </children>
            </StackPane>
        </center>
    </BorderPane>
    
    <BorderPane fx:id="fadeOutPane" styleClass="overlay">
        <center>
            <Text fx:id="fadeOutText" text="..."/>
        </center>
    </BorderPane>
    
</StackPane>
