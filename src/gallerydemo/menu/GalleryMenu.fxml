<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="BASELINE_CENTER"> 
            <Text text="Gallerie"/>
            <Separator orientation="HORIZONTAL"/>
        </VBox>
    </top>
    <center>
        <HBox alignment="BASELINE_CENTER">
            <Button text="Neue Gallerie" fx:id="newGalleryButton" id="button-new" styleClass="topMenuButton"/>
            <Button text="Neuer Ordner" fx:id="newFolderButton" id="button-newfolder" styleClass="topMenuButton"/>
            <Button text="Bearbeiten" fx:id="galleryPropertiesButton" id="button-properties" styleClass="topMenuButton"/>
            <Button text="Löschen" fx:id="deleteGalleryButton" id="button-del" styleClass="topMenuButton"/>
            
            <Separator orientation="VERTICAL"/>
            
            <Button text="Bilder hinzufügen" fx:id="addimgGalleryButton" id="button-addimg" styleClass="topMenuButton"/>
            
            <Separator orientation="VERTICAL"/>
            
            <Button text="Exportieren" fx:id="exportGalleryButton" id="button-export" styleClass="topMenuButton"/>
            <Button text="Synchronisieren" fx:id="syncGalleryButton" id="button-sync" styleClass="topMenuButton"/>
        </HBox>
    </center>
</fx:root>
